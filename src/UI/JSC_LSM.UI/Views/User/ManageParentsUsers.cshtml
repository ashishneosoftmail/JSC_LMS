<script type="text/javascript">
    $(document).ready(function () {
        $('.datatable').DataTable({
            searching: false,
            "oLanguage": {
                "sLengthMenu": "Rows_Per_Page _MENU_",
            },
            "dom": '<"top"i>rt<"bottom"flp><"clear">'
        });
        $('.datatable').each(function () {
            var datatable = $(this);
            var length_sel = datatable.closest('.dataTables_wrapper').find('div[id$=_length] select');
            length_sel.addClass('form-control input-lg');
        });
    });
</script>

<script>
    function loadData() {
        console.log("worked");
        loadClassList();
        loadSectionList();
        loadStudentnameList();
        loadParentnameList();
        loadAllParents();
    }
    loadData();

    function ShowParentDetail(id, name) {
        $.get("/User/GetParentsById", {Id:id,StudentName:name},  function (data) {
            console.log(data);
            if (data) {
                $("#detailsUserType").text(data.userType);
                $("#detailsParentName").text(data.parentsName);
                $("#detailsStudentName").text(data.studentName);
                $("#detailsUserName").text(data.username);
                $("#detailsEmail").text(data.email);
                $("#detailsMobile").text(data.mobile);
                $("#detailsClass").text(data.className);
                $("#detailsSection").text(data.sectionName);
                $("#detailsAddressLine1").text(data.addressLine1);
                $("#detailsAddressLine2").text(data.addressLine2);
                $("#detailsCity").text(data.cityName);
                $("#detailsState").text(data.stateName);
                $("#detailsZip").text(data.zipCode);
                data.isActive ? $("#detailsStatus").text("Active") : $("#detailsStatus").text("Inactive");
            }
        });
    }

    function loadClassList() {
        $.get("/User/GetAllClass", function (data) {
            $("#className").append("<option disabled selected hidden>Select Class</option>");
            data.forEach(function (classes) {
                $('#className').append('<option value="' + classes.value + '">' + classes.text + '</option>');
            });
        });
    }
    function loadSectionList() {
        $.get("/User/GetAllSection", function (data) {
            $("#sectionName").append("<option disabled selected hidden>Select Section</option>");
            data.forEach(function (sections) {
                $('#sectionName').append('<option value="' + sections.value + '">' + sections.text + '</option>');
            });
        });
    }

    function loadStudentnameList() {
        $.get("/User/GetStudentName", function (data) {
            $("#studentName").append("<option disabled selected hidden>Select Student</option>");
            data.forEach(function (students) {
                $('#studentName').append('<option value="' + students.value + '">' + students.text + '</option>');
            });
        });
    }
    function loadParentnameList() {
        $.get("/User/GetParentName", function (data) {
            $("#studentName").append("<option disabled selected hidden>Select Parent</option>");
            data.forEach(function (parents) {
                $('#parentName').append('<option value="' + parents.value + '">' + parents.text + '</option>');
            });
        });
    }

    function loadAllParents(number = 1) {
        var size = $("#rowsPerPage :selected").val();
        $.get(`/User/GetAllParentDetailsByPagination?page=${number}&size=${size}`, function (data) {
            console.log(data);
            if (data.length > 0) {
                $("#tableData").empty();
                var id = 0;
                data.forEach(function (parent) {

                    id = id + 1;
                    var result = ` <tr>
                               <td>${id}</td>
                                <td>${parent.className}</td>
                                <td>${parent.sectionName}</td>
                                <td>${parent.studentName}</td>
                                <td>${parent.parentsName}</td>
                                <td>${new Date(parent.createdDate).toLocaleDateString()}</td>
                                <td>${parent.isActive ? "Active" : "Inactive"}</td>
                                <td>
                                    <a href="/User/EditParents/${parent.id}"  class="btn btn-link"  >Edit</a>
                                    <button type="button" class="btn btn-link" data-toggle="modal" data-target="#myModal" onclick="ShowParentDetail(${parent.id},'${parent.studentName}')">
                                        View

                                </td>
                            </tr>`;
                    $("#tableData").append(result);
                });
            }
            else {
                $("#tableData").empty();
                var emptyData = `<tr>
                <td colspan="8" class="text-center">
                No Record Found</tr ></td>`;
                $("#tableData").append(emptyData);
            }
        });
    }

    function searchParents() {
        $("#paginationContainer").remove();


        var _className = $("#className :selected").text();
        var _sectionName = $("#sectionName :selected").text();
        var _parentsName = $("#parentName :selected").text();
        var _studentName = $("#studentName :selected").text();
        var _isActive = $("#status :selected").val();
        var _date = $("#date").val();

        $.get("/User/GetParentsByFilters?className=" + _className + "&sectionName=" + _sectionName + "&studentName=" + _studentName + "&parentsName=" + _parentsName + "&isActive=" + _isActive + "&createdDate=" + _date, function (data) {
            if (data.length > 0) {
                $("#tableData").empty();
                var id = 0;
                data.forEach(function (parent) {

                    id = id + 1;
                    var result = ` <tr>
                               <td>${id}</td>
                                <td>${parent.className}</td>
                                <td>${parent.sectionName}</td>
                                <td>${parent.studentName}</td>
                                 <td>${parent.parentsName}</td>
                                <td>${new Date(parent.createdDate).toLocaleDateString()}</td>
                                <td>${parent.isActive ? "Active" : "Inactive"}</td>
                                <td>
                                    <a href="/User/EditParents/${parent.id}"  class="btn btn-link"  >Edit</a>
                                    <button type="button" class="btn btn-link" data-toggle="modal" data-target="#myModal" onclick="ShowParentDetail(${parent.id})">
                                        View

                                </td>
                            </tr>`;
                    $("#tableData").append(result);
                });
            }
            else {
                $("#tableData").empty();
                var emptyData = `<tr>
                <td colspan="8" class="text-center">
                No Record Found</tr ></td>`;
                $("#tableData").append(emptyData);
            }
        });
    }
</script>
