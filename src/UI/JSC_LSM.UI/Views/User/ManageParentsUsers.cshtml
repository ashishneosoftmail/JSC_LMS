        <div class="form-group row">
            <button type="button" class="btn btn-primary float-lg-end pull-right " onclick="searchParents()">Search</button>
        </div>
     
    </div>
</div>

<div class="col-md-11">
    <a asp-controller="User" asp-action="DownloadExcelParents" class="btn btn-sm btn-primary pull-right m-2" download>Export</a>
    <button class="btn btn-sm btn-primary pull-right m-2">Upload</button>
