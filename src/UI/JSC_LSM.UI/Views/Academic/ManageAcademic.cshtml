    function loadAcademicList() {
        $.get("/Academic/GetAcademicName", function (data) {
            $("#type").append("<option disabled selected hidden>Select Type</option>");
            data.forEach(function (academic) {
                $('#type').append('<option value="' + academic.value + '">' + academic.text + '</option>');
            });
        });
    }

    function searchAcademic() {

        var _schoolName = $("#schoolName :selected").text();
        var _className = $("#className :selected").text();
        var _sectionName = $("#sectionName :selected").text();
        var _subjectName = $("#subjectName :selected").text();
        var _teacherName = $("#teacherName :selected").text();
        var _academicName = $("#type :selected").text();
        var _isActive = $("#status :selected").val();
        var _date = $("#date").val();

    
        $.get("/Academic/GetAcademicByFilters?type=" + _academicName + "&schoolName=" + _schoolName + "&className=" + _className + "&sectionName=" + _sectionName + "&subjectName=" + _subjectName + "&teacherName=" + _teacherName+ "&createdDate=" + _date + "&isActive=" + _isActive, function (data) {
                if (data.length > 0) {
                    $("#tableData").empty();
                    var id = 0;
                    data.forEach(function (academic) {
                        id = id + 1;
                        var result = ` <tr>
                                <td>${id}</td>
                                <td>${academic.schoolName}</td>
                                 <td>${academic.className}</td>
                                  <td>${academic.sectionName}</td>
                                    <td>${academic.subjectName}</td>
                                   <td>${academic.teacherName}</td>
                                      <td>${academic.type}</td>
                                      <td>${academic.cutOff}</td>
                                <td>${new Date(academic.createdDate).toLocaleDateString()}</td>

                                <td>${academic.isActive ? "Active" : "Inactive"}</td>

                                <td>
                                   <a href="/Academic/EditAcademic/${academic.id}"
                                       class="btn btn-link"
                                       >Edit</a>

                                    <button type="button" class="btn btn-link" data-toggle="modal" data-target="#myModal" onclick="ShowAcademicDetail(${academic.id})">
                                        View

                                </td>
                            </tr>`;
                        $("#tableData").append(result);
                    });
                }
                else {
                    $("#tableData").empty();
                    var emptyData = `<tr>
                <td colspan="11" class="text-center">
                No Record Found</tr ></td>`;
                    $("#tableData").append(emptyData);
                }
            });
       @* }*@
    }
    function loadAllAcademic(number = 1) {
        var size = $("#rowsPerPage :selected").val();
        $.get(`/Academic/GetAllAcademicDetailsByPagination?page=${number}&size=${size}`, function (data) {
            console.log(data);
            if (data.length > 0) {
                $("#tableData").empty();
                var id = 0;
                data.forEach(function (academic) {

                    id = id + 1;
                    var result = ` <tr>
                                <td>${id}</td>
                                <td>${academic.schoolName}</td>
                                 <td>${academic.className}</td>
                                  <td>${academic.sectionName}</td>
