        loadAcademicList();
        loadAllAcademic();
    }
    loadData();

    function ShowAcademicDetail(id) {
        $.get("/Academic/GetAcademicById", { Id: id }, function (data) {
            if (data) {

                $("#detailsShoolName").text(data.data.school.schoolName);
                $("#detailsName").text(data.data.class.className);
                $("#detailsSectionName").text(data.data.section.sectionName);
                $("#detailsSubjectName").text(data.data.subject.subjectName);
                $("#detailsTeacherName").text(data.data.teacher.teacherName);
                $("#detailsType").text(data.data.type);
                $("#detailsCutOff").text(data.data.cutOff);
              
                data.data.isActive ? $("#detailsStatus").text("Active") : $("#detailsStatus").text("Inactive");
            }
        });
    }

    function loadSchoolList() {
        $.get("/Academic/GetAllSchool", function (data) {
            $("#schoolName").append("<option disabled selected hidden>Select School</option>");
            data.forEach(function (school) {
                $('#schoolName').append('<option value="' + school.value + '">' + school.text + '</option>');
            });
        });
    }
    function loadClassList() {
        $.get("/Academic/GetAllClass", function (data) {
            $("#className").append("<option disabled selected hidden>Select Class</option>");
            data.forEach(function (classes) {
                $('#className').append('<option value="' + classes.value + '">' + classes.text + '</option>');
            });
        });
    }

    function loadSectionList() {
        $.get("/Academic/GetAllSection", function (data) {
            $("#sectionName").append("<option disabled selected hidden>Select Section</option>");
            data.forEach(function (section) {
                $('#sectionName').append('<option value="' + section.value + '">' + section.text + '</option>');
