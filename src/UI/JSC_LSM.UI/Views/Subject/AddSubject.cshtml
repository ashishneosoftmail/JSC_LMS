
@model SubjectModel


@{
    ViewData["Title"] = "AddSubject";
    Layout = "~/Views/Shared/_PrincipalLayout.cshtml";
}
<style>
    .ButtonDesign {
        width: 10%;
        margin-left: 1%;
    }

    form {
        padding: inherit;
        margin: 5px 5px 5px 5px;
        border: 2px solid gray;
        height: 80%;
        /*  width : 100%;*/
    }

    input {
        width: 90%;
    }

    div {
        font-size: 16px;
    }

    .spacing {
        margin-left: 30px;
    }
</style>



<div class="container p-3 my-3 border fixed" id="div1">
    <h3>Create Subject</h3>
    <p style="font-weight: bold; margin-left: 0.5em;">All <span style="color:red;">*</span> fields are mandatory</p>

    <form method="post" novalidate>
       
        <div class="row">
            <div class="col">
                <div class="form-group row">
                    <label for="inputSchool" class="col-sm-2 col-form-label">School Name<span class="text-danger">*</span> :</label>
                    <div class="col-sm-5">
                        <select class="form-control" asp-for="SchoolId" id="school" asp-items="Model.Schools">
                            <option disabled selected hidden>Select School</option>
                        </select>
                        <span asp-validation-for="SchoolId" class="text-danger"></span>
                    </div>
                </div>
                <br />

                <div class="form-group row">
                    <label for="inputClass" class="col-sm-2 col-form-label">Class Name<span class="text-danger">*</span> :</label>
                    <div class="col-sm-5">
                        <select class="form-control" asp-for="ClassId" id="class" asp-items="Model.Classes">
                            <option disabled selected hidden>Select Class</option>
                        </select>
                        <span asp-validation-for="ClassId" class="text-danger"></span>
                    </div>
                </div>
                <br />

                <div class="form-group row">
                    <label for="inputSection" class="col-sm-2 col-form-label">Section Name<span class="text-danger">*</span> :</label>
                    <div class="col-sm-5">
                        <select class="form-control" asp-for="SectionId" id="class" asp-items="Model.Sections">
                            <option disabled selected hidden>Select Section</option>
                        </select>
                        <span asp-validation-for="SectionId" class="text-danger"></span>
                    </div>
                </div>
                <br />


                <div class="form-group row">
                    <label for="inputSubjectName" class="col-sm-2 col-form-label">Subject Name<span class="text-danger">*</span>:</label>
                    <div class="col-sm-5">
                        <input type="text" class="form-control" id="inputSection" asp-for="SubjectName" placeholder="Section Name">
                        <span asp-validation-for="SubjectName" class="text-danger"></span>

                    </div>
                </div>

                <br />
               

                <label style=" margin-right: 7em;">Status :</label>

                <div class="form-check form-check-inline">
                    @Html.RadioButtonFor(m => m.IsActive, true, new { @class = "form-check-input" })<label class="form-check-label" for="inlineRadio2">Active</label>

                </div>
                <div class="form-check form-check-inline">
                    @Html.RadioButtonFor(m => m.IsActive, false, new { @class = "form-check-input", @checked = "checked" }) <label class="form-check-label" for="inlineRadio1">InActive</label>

                </div>
                <span asp-validation-for="IsActive" class="text-danger"></span>

                <br />


            </div>
        </div>


        <a asp-action="ManageSubject" asp-controller="Subject" class="btn btn-danger pull-right m-3"><span>Cancel</span>   </a>
        <button type="submit" class="btn btn-primary pull-right m-3 ">Save</button>




    </form>
</div>
<div id="wrapper">
    @if (ViewBag.AddSubjectSuccess != null)
    {
        <script>alert("@ViewBag.AddSubjectSuccess")</script>
    }
    @if (ViewBag.AddSubjectError != null)
    {
        <script>alert("@ViewBag.AddSubjectError")</script>
    }
</div>
