<script>
    function loadData() {
        console.log("worked");
        loadSchoolList();
        loadClassList();
        loadSectionList();
        loadSubjectList();
        loadAllSubject();


    }
    loadData();

    function ShowSubjectlDetail(id) {
        $.get("/Subject/GetSubjectById", { Id: id }, function (data) {
            console.log(data)
            if (data) {

                $("#detailsShoolName").text(data.data.school.schoolName);

                $("#detailsName").text(data.data.class.className);

                $("#detailsSecName").text(data.data.section.sectionName);

                $("#detailsSubName").text(data.data.subjectName);



                data.data.isActive ? $("#detailsStatus").text("Active") : $("#detailsStatus").text("Inactive");
            }
        });
    }

    function loadSchoolList() {
        $.get("/Subject/GetAllSchool", function (data) {
            $("#schoolName").append("<option disabled selected hidden>Select School</option>");
            data.forEach(function (school) {
                $('#schoolName').append('<option value="' + school.value + '">' + school.text + '</option>');
            });
        });
    }

    function loadClassList() {
        $.get("/Subject/GetAllClass", function (data) {
            $("#className").append("<option disabled selected hidden>Select Class</option>");
            data.forEach(function (classes) {
                $('#className').append('<option value="' + classes.value + '">' + classes.text + '</option>');
            });
        });
    }

    function loadSectionList() {
        $.get("/Subject/GetAllSection", function (data) {
            $("#sectionName").append("<option disabled selected hidden>Select Section</option>");
            data.forEach(function (sections) {
                $('#sectionName').append('<option value="' + sections.value + '">' + sections.text + '</option>');
            });
        });
    }


    function loadSubjectList() {
        $.get("/Subject/GetSubjectName", function (data) {
            $("#subjectName").append("<option disabled selected hidden>Select Subject</option>");
            data.forEach(function (subjects) {
                $('#subjectName').append('<option value="' + subjects.value + '">' + subjects.text + '</option>');
            });
        });
    }

    function searchSubject() {
        $("#paginationContainer").remove();
        var _schoolName = $("#schoolName :selected").text();
        var _className = $("#className :selected").text();
        var _sectionName = $("#sectionName :selected").text();
        var _subjectName = $("#subjectName :selected").text();
        var _isActive = $("#status :selected").val();
        var _date = $("#date").val();
        $.get("/Subject/GetSubjectByFilters?className=" + _className + "&schoolName=" + _schoolName + "&sectionName=" + _sectionName + "&subjectName=" + _subjectName + "&createdDate=" + _date + "&isActive=" + _isActive, function (data) {
            if (data.length > 0) {
                $("#tableData").empty();
                var id = 0;
                data.forEach(function (subjects) {
                    id = id + 1;
                    var result = ` <tr>
                                <td>${id}</td>
                                <td>${subjects.schoolName}</td>
                                <td>${subjects.className}</td>
                                <td>${subjects.sectionName}</td>
                                <td>${subjects.subjectName}</td>
                                <td>${new Date(subjects.createdDate).toLocaleDateString()}</td>

                                <td>${subjects.isActive ? "Active" : "Inactive"}</td>

                                <td>
                                      <a href="/Subject/EditSubject/${subjects.id}"
                                       class="btn btn-link"
                                       >Edit</a>

                                    <button type="button" class="btn btn-link" data-toggle="modal" data-target="#myModal" onclick="ShowSubjectlDetail(${subjects.id})">
                                        View

                                </td>
                            </tr>`;
                    $("#tableData").append(result);
                });
            }
            else {
                $("#tableData").empty();
                var emptyData = `<tr>
                <td colspan="8" class="text-center">
                No Record Found</tr ></td>`;
                $("#tableData").append(emptyData);
            }
        });
    }
    function loadAllSubject(number = 1) {
        var size = $("#rowsPerPage :selected").val();
        $.get(`/Subject/GetAllSubjectsDetailsByPagination?page=${number}&size=${size}`, function (data) {
            console.log(data);
            if (data.length > 0) {
                $("#tableData").empty();
                var id = 0;
                data.forEach(function (subjects) {

                    id = id + 1;
                    var result = ` <tr>
                                <td>${id}</td>
                                <td>${subjects.schoolName}</td>
                                <td>${subjects.className}</td>
                                 <td>${subjects.sectionName}</td>
                                  <td>${subjects.subjectName}</td>
                                <td>${new Date(subjects.createdDate).toLocaleDateString()}</td>

                                <td>${subjects.isActive ? "Active" : "Inactive"}</td>

                                <td>
                                      <a href="/Subject/EditSubject/${subjects.id}"
                                       class="btn btn-link"
                                       >Edit</a>


                                    <button type="button" class="btn btn-link" data-toggle="modal" data-target="#myModal" onclick="ShowSubjectlDetail(${subjects.id})">
                                        View

                                </td>
                            </tr>`;
                    $("#tableData").append(result);
                });
            }
            else {
                $("#tableData").empty();
                var emptyData = `<tr>
                <td colspan="8" class="text-center">
                No Record Found</tr ></td>`;
                $("#tableData").append(emptyData);
            }
        });
    }

</script>
