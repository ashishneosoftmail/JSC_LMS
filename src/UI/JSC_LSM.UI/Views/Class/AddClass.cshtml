
@model ClassModel


@{
    ViewData["Title"] = "AddClass";
    Layout = "~/Views/Shared/_SuperAdminLayout.cshtml";
}
<style>
    .ButtonDesign {
        width: 10%;
        margin-left: 1%;
    }

    form {
        padding: inherit;
        margin: 5px 5px 5px 5px;
        border: 2px solid gray;
        height: 100%;
        /*  width : 100%;*/
    }

    input {
        width: 90%;
    }

    div {
        font-size: 16px;
    }
</style>



<div class="container p-3 my-3 border fixed" id="div1">
    <h3>Create Class</h3>
    <form method="post" novalidate>
        <div class="row">
            <div class="col">
                <div class="form-group row">
                    <label for="inputSchool" class="col-sm-2 col-form-label">School :</label>
                    <div class="col-sm-5">
                        <select class="form-control" asp-for="SchoolId" id="school" asp-items="Model.Schools">
                            <option disabled selected hidden>Select School</option>
                        </select>
                        <span asp-validation-for="SchoolId" class="text-danger"></span>
                    </div>
                </div>
                <br />

                <br />

                <div class="form-group row">
                    <label for="inputClassName" class="col-sm-2 col-form-label">Class Name:</label>
                    <div class="col-sm-5">
                        <input type="text" class="form-control" id="inputAddress1" asp-for="ClassName" placeholder="Class Name">
                        <span asp-validation-for="ClassName" class="text-danger"></span>

                    </div>
                </div>

                <br />
                <br />

                <label>Status :</label>

                <div class="form-check form-check-inline">
                    @Html.RadioButtonFor(m => m.IsActive, true, new { @class = "form-check-input", @checked = "checked" }) <label class="form-check-label" for="inlineRadio1">Active</label>
                    @*<input class="form-check-input" type="radio" asp-for="IsActive" name="inlineRadioOptions" id="inlineRadio1" value="1">
                        <label class="form-check-label" for="inlineRadio1">Active</label>*@
                </div>
                <div class="form-check form-check-inline">
                    @Html.RadioButtonFor(m => m.IsActive, false, new { @class = "form-check-input" })<label class="form-check-label" for="inlineRadio2">Inactive</label>
                    @* <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="0" asp-for="IsActive">
                        <label class="form-check-label" for="inlineRadio2">Inactive</label>*@
                </div>
                <span asp-validation-for="IsActive" class="text-danger"></span>

                <br />


            </div>
        </div>


        <button type="button" class="btn btn-danger float-lg-end ButtonDesign">Cancel</button>
        <button type="submit" class="btn btn-primary float-lg-end ButtonDesign">Save</button>




    </form>
</div>
<div id="wrapper">
    @if (ViewBag.AddClassSuccess != null)
    {
        <script>alert("@ViewBag.AddClassSuccess")</script>
    }
    @if (ViewBag.AddClassError != null)
    {
        <script>alert("@ViewBag.AddClassError")</script>
    }
</div>








