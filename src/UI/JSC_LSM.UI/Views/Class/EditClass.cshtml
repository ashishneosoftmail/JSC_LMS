@model UpdateClassViewModel
<style>
    .ButtonDesign {
        width: 10%;
        margin-left: 1%;
    }

    form {
        padding: inherit;
        margin: 5px 5px 5px 5px;
        border: 2px solid gray;
        height: 80%;
        /*  width : 100%;*/
    }

    input {
        width: 90%;
    }

    div {
        font-size: 16px;
    }

    #snackbar {
        background-color: green;
        visibility: hidden;
        min-width: 250px;
        margin-left: -113px;
        color: #fff;
        text-align: center;
        border-radius: 2px;
        padding: 21px;
        position: fixed;
        z-index: 1;
        left: 90%;
        top: 82px;
        font-size: 17px;
    }

        #snackbar.show {
            visibility: visible;
            -webkit-animation: fadein 0.5s, fadeout 0.5s 2.5s;
            animation: fadein 0.5s, fadeout 0.5s 2.5s;
        }


        #snackbar.show {
            visibility: visible;
            -webkit-animation: fadein 0.5s, fadeout 0.5s 2.5s;
            animation: fadein 0.5s, fadeout 0.5s 2.5s;
        }

    #snackbardanger {
        background-color: red;
        visibility: hidden;
        min-width: 250px;
        margin-left: -113px;
        color: #fff;
        text-align: center;
        border-radius: 2px;
        padding: 21px;
        position: fixed;
        z-index: 1;
        left: 90%;
        top: 82px;
        font-size: 17px;
    }

        #snackbardanger.show {
            visibility: visible;
            -webkit-animation: fadein 0.5s, fadeout 0.5s 2.5s;
            animation: fadein 0.5s, fadeout 0.5s 2.5s;
        }

    @@-webkit-keyframes fadein {
        from {
            top: 0;
            opacity: 0;
        }

        to {
            top: 30px;
            opacity: 1;
        }
    }

    @@keyframes fadein {
        from {
            top: 0;
            opacity: 0;
        }

        to {
            top: 30px;
            opacity: 1;
        }
    }

    @@-webkit-keyframes fadeout {
        from {
            top: 30px;
            opacity: 1;
        }

        to {
            top: 0;
            opacity: 0;
        }
    }

    @@keyframes fadeout {
        from {
            top: 30px;
            opacity: 1;
        }

        to {
            top: 0;
            opacity: 0;
        }
    }

    .spacing {
        margin-left: 30px;
    }
</style>
<div id="wrapper">
    @if (ViewBag.GetClassById != null)
    {
        <script>alert("@ViewBag.GetClassById")</script>
        @*@ViewBag.GetClassById = null;*@
    }

</div>
<div class="container p-3 my-3 border fixed" id="div1">
    <h3>Update Class</h3>
    <p style="font-weight:bold; margin-top:1em;">All <span style="color:red;">*</span> fields are mandatory</p>

    <form method="post" novalidate>
       
       
            <div class="col">
                <div class="form-group row">
                    <label for="inputSchool" class="col-sm-2 col-form-label">School<span class="text-danger">*</span></label>
                    <div class="col-sm-4">
                        <select class="form-control" asp-for="SchoolId" id="school" asp-items="Model.Schools">
                            <option disabled selected hidden>Select School</option>
                        </select>
                        <span asp-validation-for="SchoolId" class="text-danger"></span>
                    </div>
                </div>
                <br />

            </div>
            <div class="col">
                <div class="form-group row">
                    <label for="inputClassName" class="col-sm-2 col-form-label">Class<span class="text-danger">*</span></label><br />
                    <div class="col-sm-4">
                        <input type="text" class="form-control" id="inputClassName" asp-for="ClassName" placeholder="Ex: Abc">
                        <span asp-validation-for="ClassName" class="text-danger"></span>

                    </div>
                </div>
                <br />

                <br />

                <label style="margin-right:7.5em;">Status</label>

                <div class="form-check form-check-inline">
                    @Html.RadioButtonFor(m => m.IsActive, true, new { @class = "form-check-input", @checked = "checked" }) <label class="form-check-label" for="inlineRadio1">Active</label>
                    @*<input class="form-check-input" type="radio" asp-for="IsActive" name="inlineRadioOptions" id="inlineRadio1" value="1">
                        <label class="form-check-label" for="inlineRadio1">Active</label>*@
                </div>
                <div class="form-check form-check-inline">
                    @Html.RadioButtonFor(m => m.IsActive, false, new { @class = "form-check-input" })<label class="form-check-label" for="inlineRadio2">Inactive</label>
                    @* <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="0" asp-for="IsActive">
                        <label class="form-check-label" for="inlineRadio2">Inactive</label>*@
                </div>
                <span asp-validation-for="IsActive" class="text-danger"></span>

                <br />
                <br />

            </div>
   


        <a asp-action="ManageClass" asp-controller="Class" class="btn btn-danger pull-right m-2"><span>Cancel</span>   </a>
        <button type="submit" class="btn btn-primary pull-right m-2 ">Update</button>




    </form>
</div>
<div id="wrapper">
    @if (ViewBag.UpdateClassSuccess != null)
    {
        @* <script>alert("@ViewBag.UpdateCircularSuccess")</script>*@
        <div id="snackbar" class="snackbar-success"><i class="fa fa-check" aria-hidden="true"></i> @ViewBag.UpdateClassSuccess</div>
        <script>
            var x = document.getElementById("snackbar");
            x.className = "show";
            setTimeout(function () { x.className = x.className.replace("show", ""); }, 5000);
        </script>
    }
    @if (ViewBag.UpdateClassError != null)
    {
        @*<script>alert("@ViewBag.UpdateCircularError")</script>*@
        <div id="snackbardanger"><i class="fa fa-times" aria-hidden="true"></i> @ViewBag.UpdateClassError</div>
        <script>
            var x = document.getElementById("snackbardanger");
            x.className = "show";
            setTimeout(function () { x.className = x.className.replace("show", ""); }, 5000);
        </script>
    }
</div>
<script type="text/javascript">
   @* loadSchoolList();*@
    function loadSchoolList() {
        $.get("/Class/GetAllSchool", function (data) {
            $("#schoolName").append("<option disabled selected hidden>Select School</option>");
            data.forEach(function (school) {
                $('#schoolName').append('<option value="' + school.value + '">' + school.text + '</option>');
            });
        });
    }


</script>