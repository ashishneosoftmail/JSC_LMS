@model JSC_LSM.UI.ResponseModels.GetAllInstituteListResponseModel


@{
    ViewData["Title"] = "Institute Details";
    Layout = "~/Views/Shared/_SuperAdminLayout.cshtml";
}
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<style>
    .row {
        padding-top: 10px;
    }

    .btn-text-right {
        margin-left: 14.5%;
    }

    a {
        text-decoration: none;
    }
</style>
<h2>Manage Institute</h2>
<h4>Search Filter</h4>

<div class="row">

    <div class="form-group row col-sm-4">
        <label for="schoolName" class="col-sm-5 col-form-label">Institute Name</label>
        <div class="col-sm-7">
            <input type="text" class="form-control" id="inputInstitute" placeholder="Institute name">
        </div>
    </div>

    <div class="form-group row col-sm-4">
        <label for="className" class="col-sm-5 col-form-label">City :</label>
        <div class="col-sm-7">
            <select class="form-control" id="className">
                <option disabled selected hidden>Select City</option>
                <option>Mumbai</option>
                <option>Hyderabad</option>
                <option>Banglore</option>
                <option>Agra</option>
            </select>
        </div>
    </div>

    <div class="form-group row col-sm-4">
        <label for="section" class="col-sm-5 col-form-label">State :</label>
        <div class="col-sm-7">
            <select class="form-control" id="section">
                <option disabled selected hidden>Select Section</option>
                <option>Maharashtra</option>
                <option>Telangna</option>
                <option>Karnataka</option>
                <option>Uttar Pradesh</option>
            </select>
        </div>
    </div>
    <div class="form-group row col-sm-4">
        <label for="status" class="col-sm-5 col-form-label">Status :</label>
        <div class="col-sm-7">
            <select class="form-control" id="status">
                <option disabled selected hidden>Select Status</option>
                <option>Active</option>
                <option>Inactive</option>
            </select>
        </div>
    </div>
    <div class="form-group row col-sm-4">
        <label for="date" class="col-sm-5 col-form-label">Date :</label>
        <div class="col-sm-7">
            <input type="date" value="" class="form-control" id="date" />
        </div>
    </div>

    <div class="form-group row col-sm-2 btn-text-right">
        <button type="button" class="btn btn-primary float-lg-end ">Search</button>
    </div>
</div>




<div class="col-md-11">
    <button class="btn btn-sm btn-primary pull-right m-2">Export</button>
    <button class="btn btn-sm btn-primary pull-right m-2">Upload</button>
    <a href="#" class="pull-right btn btn-sm btn-link m-2">Download Sample Template</a>
    <a asp-action="AddInstitute" asp-controller="Institute" class="btn btn-primary btn-sm pull-right m-2"><span>Add New</span>   </a>

</div>

<div id="wrap" class="mt-3">
    <div class="container">
        <table cellpadding="0" cellspacing="0" border="0" class="datatable table table-striped table-bordered table-hover table-responsive ">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Institute Name</th>
                    <th>City</th>
                    <th>State</th>
                    <th>Created Date</th>
                    <th>Expiry Date</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @{int i = 0;}
                @foreach (var institute in Model.data)
                {
                <tr>
                    <td>@(i = i + 1)</td>
                    <td>@institute.InstituteName</td>
                    <td>@institute.City.CityName</td>
                    <td>@institute.State.StateName</td>
                    <td>@institute.CreatedDate.ToShortDateString() </td>
                    <td>@institute.LicenseExpiry.ToShortDateString() </td>
                    <td>@(institute.IsActive == true ? "Active" : "Inactive")</td>

                    @*<td>

                        <a href="" class="btn btn-link btn-sm">Edit</a>
                        <a href="" class="btn btn-link btn-sm">View</a>
                    </td>*@
                    <td>
                        <a asp-controller="Institute"
                           asp-action="Edit"
                           class="btn btn-link"
                           asp-route-Id="@institute.Id">Edit</a>
                        <button type="button" class="btn btn-link" data-toggle="modal" data-target="#myModal" onclick="ShowInstituteDetail(@institute.Id)">
                            View
                        </button>
                        @* <a asp-controller="Principal"
            class="btn btn-link"
            asp-action="Detail"
            asp-route-Id="@principal.Id" data-toggle="modal" data-target="#myModal">View</a>*@
                    </td>
                </tr>
                }


            </tbody>
        </table>
    </div>
</div>


