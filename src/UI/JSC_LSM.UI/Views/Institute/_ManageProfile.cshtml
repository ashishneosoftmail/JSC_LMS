@model ManageProfile
@{
    ViewData["Title"] = "ManageProfile";
}
<style>
    #div1 {
        width: 620px;
        height: 400px;
        display: inline-block;
        padding: 15px;
        text-align: center;
        border-style: solid;
        border-color: lightgray;
       
    }
    #snackbar {
        background-color: green;
        visibility: hidden;
        min-width: 250px;
        margin-left: -113px;
        color: #fff;
        text-align: center;
        border-radius: 2px;
        padding: 21px;
        position: fixed;
        z-index: 1;
        left: 90%;
        top: 82px;
        font-size: 17px;
    }

        #snackbar.show {
            visibility: visible;
            -webkit-animation: fadein 0.5s, fadeout 0.5s 2.5s;
            animation: fadein 0.5s, fadeout 0.5s 2.5s;
        }


        #snackbar.show {
            visibility: visible;
            -webkit-animation: fadein 0.5s, fadeout 0.5s 2.5s;
            animation: fadein 0.5s, fadeout 0.5s 2.5s;
        }

    #snackbardanger {
        background-color: red;
        visibility: hidden;
        min-width: 250px;
        margin-left: -113px;
        color: #fff;
        text-align: center;
        border-radius: 2px;
        padding: 21px;
        position: fixed;
        z-index: 1;
        left: 90%;
        top: 82px;
        font-size: 17px;
    }

        #snackbardanger.show {
            visibility: visible;
            -webkit-animation: fadein 0.5s, fadeout 0.5s 2.5s;
            animation: fadein 0.5s, fadeout 0.5s 2.5s;
        }

    @@-webkit-keyframes fadein {
        from {
            top: 0;
            opacity: 0;
        }

        to {
            top: 30px;
            opacity: 1;
        }
    }

    @@keyframes fadein {
        from {
            top: 0;
            opacity: 0;
        }

        to {
            top: 30px;
            opacity: 1;
        }
    }

    @@-webkit-keyframes fadeout {
        from {
            top: 30px;
            opacity: 1;
        }

        to {
            top: 0;
            opacity: 0;
        }
    }

    @@keyframes fadeout {
        from {
            top: 30px;
            opacity: 1;
        }

        to {
            top: 0;
            opacity: 0;
        }
    }

    .spacing {
        margin-left: 30px;
    }
</style>
<div class="container p-3 my-3" id="div1">
    <h3 class="profileStyle">Profile Information</h3>
    
    <form method="post" novalidate asp-action="UpdateProfileInformation" asp-controller="Institute">

        <div class="form-group row">
            <label for="inputPassword" class="col-sm-2 col-form-label">Name <span class="text-danger">*</span></label>
            <div class="col-sm-7">
                <input type="text" class="form-control" id="inputName" asp-for="ProfileInformation.Name" placeholder="Name">
                <span asp-validation-for="ProfileInformation.Name" class="text-danger"></span>
            </div>
        </div>
        <br />

        <div class="form-group row">
            <label for="inputPassword" class="col-sm-2 col-form-label">Mobile Support <span class="text-danger">*</span></label>
            <div class="col-sm-7">
                <input type="text" class="form-control" id="inputNumber" asp-for="ProfileInformation.Mobile" placeholder="Mobile number">
                <span asp-validation-for="ProfileInformation.Mobile" class="text-danger"></span>

            </div>
        </div>
        <br />


        <br />
        <button type="submit" class="btn btn-primary">Update</button>
    </form>
    <br />
  
</div>
<div id="wrapper">
    @if (ViewBag.UpdateInstituteadminSuccess != null)
    {

        @* <script>alert("@ViewBag.AddCircularSuccess")</script>*@
        <div id="snackbar" class="snackbar-success "><i class="fa fa-check" aria-hidden="true"></i> @ViewBag.UpdateInstituteadminSuccess</div>
        <script>
            var x = document.getElementById("snackbar");
            x.className = "show";
            setTimeout(function () { x.className = x.className.replace("show", ""); }, 5000);
        </script>
    }
    @if (ViewBag.UpdateInstituteadminError != null)
    {
        @* <script>alert("@ViewBag.AddCircularError")</script>*@
        <div id="snackbardanger"><i class="fa fa-times" aria-hidden="true"></i> @ViewBag.UpdateInstituteadminError</div>
        <script>
            var x = document.getElementById("snackbardanger");
            x.className = "show";
            setTimeout(function () { x.className = x.className.replace("show", ""); }, 5000);
        </script>
    }

</div>
<style>
    #div2 {
        position: relative;
        float: right;
        width: 550px;
        height: 700px;
        margin-top: 100px;
        display: inline-block;
        padding: 5px;
        text-align: center;
        border-style: solid;
        border-color: lightgray;
    }
</style>

<div class="container p-3 my-3" id="div2">
    <h3>Change Password</h3>
    <br />
    <br />
    <form asp-action="InstituteAdminChangePassword" asp-controller="Institute" method="post">

        <div class="form-group row ">
            <label for="inputPassword" class="col-sm-2 col-form-label">Old Password <span class="text-danger">*</span></label>
            <div class="col-sm-9">
                <input type="password" class="form-control" id="inputOld_Pass" asp-for="ChangePassword.CurrentPassword" autocomplete="off" placeholder="Old Password">
                <span asp-validation-for="ChangePassword.CurrentPassword" class="text-danger"></span>

            </div>
        </div>
        <br />
        <br />

        <div class="form-group row">
            <label for="inputPassword" class="col-sm-2 col-form-label">New Password <span class="text-danger">*</span></label>
            <div class="col-sm-9">
                <input type="password" class="form-control" id="inputNew_Pass" asp-for="ChangePassword.NewPassword" autocomplete="off" placeholder="New Password">
                <span asp-validation-for="ChangePassword.NewPassword" class="text-danger"></span>

            </div>
        </div>
        <br />
        <br />

        <div class="form-group row">
            <label for="inputPassword" class="col-sm-2 col-form-label">Confirm Password <span class="text-danger">*</span></label>
            <div class="col-sm-9">
                <input type="password" class="form-control" id="inputConfirm_Pass" asp-for="ChangePassword.ConfirmPassword" autocomplete="off" placeholder="Confirm Password">
                <span asp-validation-for="ChangePassword.ConfirmPassword" class="text-danger"></span>

            </div>
        </div>
        <br />
        <br />

        <button type="submit" class="btn btn-primary">Change Password</button>
    </form>
    <br />
 
    <div id="wrapper">
        @if (ViewBag.UpdateInstituteadminChangePasswordSuccess != null)
        {

            @* <script>alert("@ViewBag.AddCircularSuccess")</script>*@
            <div id="snackbar" class="snackbar-success "><i class="fa fa-check" aria-hidden="true"></i> @ViewBag.UpdateInstituteadminChangePasswordSuccess</div>
            <script>
                var x = document.getElementById("snackbar");
                x.className = "show";
                setTimeout(function () { x.className = x.className.replace("show", ""); }, 5000);
            </script>
        }
        @if (ViewBag.UpdateInstituteadminChangePasswordError != null)
        {
            @* <script>alert("@ViewBag.AddCircularError")</script>*@
            <div id="snackbardanger"><i class="fa fa-times" aria-hidden="true"></i> @ViewBag.UpdateInstituteadminChangePasswordError</div>
            <script>
                var x = document.getElementById("snackbardanger");
                x.className = "show";
                setTimeout(function () { x.className = x.className.replace("show", ""); }, 5000);
            </script>
        }

    </div>

</div>

