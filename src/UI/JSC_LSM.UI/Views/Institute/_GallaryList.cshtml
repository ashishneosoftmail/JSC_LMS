
@model GallaryDetailsModel
<div id="btnContainer">

    <button class="btn dark" onclick="location.href='@Url.Action("ListGallary","Institute")'"> <i class="fa fa-bars"></i>List</button>
   

    <button class="btn" onclick="location.href='@Url.Action("ManageGallary","Institute")'"> <i class="fa fa-th-large"></i>Grid</button>
</div>
<div id="wrap" class="mt-3">
    <div class="container">
        <table cellpadding="0" cellspacing="0" border="0" width="100%" class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>File Name</th>
                    <th>FileType</th>
                    <th>Event</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody id="tableData">


                @foreach (var item in Model.GetGallaryList)
                {
                    int i = 1;
                    <tr>

                        <td>
                            <label>@i</label>
                            @{ i++; }
                        </td>

                        <td>
                            @item.FileName
                        </td>

                        <td>
                            @item.FileType
                        </td>

                        <td>
                            @item.EventTitle
                        </td>

                        <td>

                            <div>
                                <button type="button" class="btn btn-link" data-toggle="modal" data-target="#editCircular" onclick="ViewGallary(@item.Id)">
                                    View
                                </button>

                                @*<button type="button" class="btn btn-link" data-toggle="modal" data-target="#confirmdelete" onclick="tempData(@item.Id)">
                                        Delete
                                    </button>*@

                            </div>

                        </td>
                    </tr>

                }
                }


            </tbody>
        </table>
    </div>
</div>
