@model UpdatePrincipalViewModel
<style>
    .ButtonDesign {
        width: 10%;
        margin-left: 1%;
    }

    form {
        padding: inherit;
        margin: 5px 5px 5px 5px;
        border: 2px solid gray;
        height: 100%;
        /*  width : 100%;*/
    }

    input {
        width: 90%;
    }

    div {
        font-size: 16px;
    }

    .spacing {
        margin-left: 30px;
    }
</style>
<div id="wrapper">
    @if (ViewBag.GetPrincipalById != null)
    {
        <script>alert("@ViewBag.GetPrincipalById")</script>
        @*@ViewBag.GetPrincipalById = null;*@
    }

</div>
<div class="container p-3 my-3 border fixed" id="div1">

    <form method="post" novalidate>

        <div class="spacing">
            <span class="row text-danger">* Marked are required fields</span>
        </div>
        <div class="row">
            <div class="col">
                <div class="form-group row">
                    <label for="inputSchool" class="col-sm-2 col-form-label">School<span class="text-danger">*</span> :</label>
                    <div class="col-sm-7">
                        <select class="form-control" asp-for="SchoolId" id="school" asp-items="Model.Schools">
                            <option disabled selected hidden>Select School</option>
                        </select>
                        <span asp-validation-for="SchoolId" class="text-danger"></span>
                    </div>
                </div>
                <br />
                <div class="form-group row">
                    <label for="inputEmail" class="col-sm-2 col-form-label">Email<span class="text-danger">*</span> :</label>
                    <div class="col-sm-7">
                        <input type="email" class="form-control" id="inputEmail" asp-for="Email" placeholder="abc@xyz.com">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <br />

                <div class="form-group row">
                    <label for="inputAddress1" class="col-sm-2 col-form-label">Address1<span class="text-danger">*</span>:</label>
                    <div class="col-sm-7">
                        <input type="text" class="form-control" id="inputAddress1" asp-for="AddressLine1" placeholder="Address 1">
                        <span asp-validation-for="AddressLine1" class="text-danger"></span>

                    </div>
                </div>
                <br />

                <div class="form-group row">
                    <label for="inputState" class="col-sm-2 col-form-label">State<span class="text-danger">*</span> :</label>
                    <div class="col-sm-7">
                        <select class="form-select" aria-label="Default select example" asp-for="StateId" asp-items="Model.States" onchange="GetCityById()" id="principalState">
                            <option value="" disabled selected>Select State</option>
                        </select>
                        <span asp-validation-for="StateId" class="text-danger"></span>

                    </div>
                </div>
                <br />

                <div class="form-group row">
                    <label for="inputZip" class="col-sm-2 col-form-label">Zip<span class="text-danger">*</span> :</label>
                    <div class="col-sm-7">
                        <select class="form-control" id="zip" asp-for="ZipId" asp-items="Model.ZipCode">
                            <option disabled selected hidden>Select Zip</option>
                        </select>
                        <span asp-validation-for="ZipId" class="text-danger"></span>
                    </div>
                </div>
                <br />


                @*<div class="form-group row">
                        <label for="inputPassword" class="col-sm-2 col-form-label">Password:</label>
                        <div class="col-sm-7">
                            <input class="form-control" type="password" id="inputPassword" asp-for="Password" placeholder="Password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                    <br />*@


            </div>
            <div class="col">
                <div class="form-group row">
                    <label for="inputPrincipalName" class="col-sm-2 col-form-label">Name<span class="text-danger">*</span> :</label><br />
                    <div class="col-sm-7">
                        <input type="text" class="form-control" id="inputPrincipalName" asp-for="Name" placeholder="Ex: Abc Xyz">
                        <span asp-validation-for="Name" class="text-danger"></span>

                    </div>
                </div>
                <br />

                <div class="form-group row">
                    <label for="inputMobile" class="col-sm-2 col-form-label">Mobile<span class="text-danger">*</span> :</label><br />
                    <div class="col-sm-7">
                        <input type="text" asp-for="Mobile" class="form-control" id="inputMobile" placeholder="Contact Number">
                        <span asp-validation-for="Mobile" class="text-danger"></span>

                    </div>
                </div>
                <br />

                <div class="form-group row">
                    <label for="inputAddress2" class="col-sm-2 col-form-label">Address2<span class="text-danger">*</span>:</label>
                    <div class="col-sm-7">
                        <input type="text" class="form-control" id="inputAddress2" placeholder="Address 2" asp-for="AddressLine2">
                        <span asp-validation-for="AddressLine2" class="text-danger"></span>

                    </div>
                </div>
                <br />

                <div class="form-group row">
                    <label for="inputState" class="col-sm-2 col-form-label">City<span class="text-danger">*</span> :</label>
                    <div class="col-sm-7">
                        <select class="form-control" id="city" asp-for="CityId" asp-items="Model.Cities" onchange="GetZipByCityId()">
                            <option disabled selected hidden>Select City</option>
                        </select>
                        <span asp-validation-for="CityId" class="text-danger"></span>

                    </div>
                </div>
                <br />


                <div class="form-group row">
                    <label for="inputUserName" class="col-sm-2 col-form-label">UserName<span class="text-danger">*</span>:</label>
                    <div class="col-sm-7">
                        <input type="text" class="form-control" id="inputUserName" asp-for="Username" placeholder="Ex : Username123">
                        <span asp-validation-for="Username" class="text-danger"></span>

                    </div>
                </div>
                <br />

                <label>Status :</label>

                <div class="form-check form-check-inline">
                    @Html.RadioButtonFor(m => m.IsActive, true, new { @class = "form-check-input", @checked = "checked" }) <label class="form-check-label" for="inlineRadio1">Active</label>

                </div>
                <div class="form-check form-check-inline">
                    @Html.RadioButtonFor(m => m.IsActive, false, new { @class = "form-check-input" })<label class="form-check-label" for="inlineRadio2">Inactive</label>

                </div>
                <span asp-validation-for="IsActive" class="text-danger"></span>

                <br />
                <br />

            </div>
        </div>


        <a asp-controller="Principal" asp-action="PrincipalDetails" class="btn btn-danger float-lg-end ButtonDesign">Cancel</a>

        <button type="submit" class="btn btn-primary float-lg-end ButtonDesign">Update</button>




    </form>
</div>
<div id="wrapper">
    @if (ViewBag.UpdatePrincipalSuccess != null)
    {
        <script>alert("@ViewBag.UpdatePrincipalSuccess")</script>
    }
    @if (ViewBag.UpdatePrincipalError != null)
    {
        <script>alert("@ViewBag.UpdatePrincipalError")</script>
    }
</div>
<script type="text/javascript">
   @* loadSchoolList();*@
    function loadSchoolList() {
        $.get("/Principal/GetAllSchool", function (data) {
            $("#schoolName").append("<option disabled selected hidden>Select School</option>");
            data.forEach(function (school) {
                $('#schoolName').append('<option value="' + school.value + '">' + school.text + '</option>');
            });
        });
    }
    function GetCityById() {
        var stateValue = $("#principalState :selected").val();
        //You can check selected value using alert

        if (stateValue != null) {
            $.get("/Principal/GetCityByStateId", { id: stateValue }, function (data) {
                console.log(data);
                $("#city").empty();
                $("#zip").empty();
                $("#zip").append("<option disabled selected hidden>Select Zip</option>");
                $("#city").append("<option disabled selected hidden>Select City</option>");
                data.forEach(function (city) {
                    $('#city').append('<option value="' + city.value + '">' + city.text + '</option>');
                });
            });
        }
    }
    function GetZipByCityId() {
        var cityValue = $("#city :selected").val();
        //You can check selected value using alert

        if (cityValue != null) {
            $.get("/Principal/GetZipByCityId", { cityId: cityValue }, function (data) {
                console.log(data);
                $("#zip").empty();
                $("#zip").append("<option disabled selected hidden>Select Zip</option>");
                data.forEach(function (zip) {
                    $('#zip').append('<option value="' + zip.value + '">' + zip.text + '</option>');
                });
            });
        }
    }
</script>