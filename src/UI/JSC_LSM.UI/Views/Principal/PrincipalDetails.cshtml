@model JSC_LSM.UI.ResponseModels.GetAllPrincipalListResponseModel

@{
    ViewData["Title"] = "Institute Details";
    Layout = "~/Views/Shared/_SuperAdminLayout.cshtml";
}

<style>
    .row {
        padding-top: 10px;
    }

    .btn-text-right {
        margin-left: 14.5%;
    }

    a {
        text-decoration: none;
    }
</style>
<h2>Manage Principal</h2>
<h4>Search Filter</h4>

<div class="row">

    <div class="form-group row col-sm-4">
        <label for="schoolName" class="col-sm-5 col-form-label">School Name</label>
        <div class="col-sm-7">
            <input type="text" class="form-control" id="inputInstitute" placeholder="Institute name">
        </div>
    </div>

    <div class="form-group row col-sm-4">
        <label for="className" class="col-sm-5 col-form-label">Principal Name :</label>
        <div class="col-sm-7">
            <select class="form-control" id="className">
                <option disabled selected hidden>Select City</option>
                <option>Mumbai</option>
                <option>Hyderabad</option>
                <option>Banglore</option>
                <option>Agra</option>
            </select>
        </div>
    </div>

    <div class="form-group row col-sm-4">
        <label for="section" class="col-sm-5 col-form-label">Status :</label>
        <div class="col-sm-7">
            <select class="form-control" id="section">
                <option disabled selected hidden>Select Status</option>
                <option value="true">Active</option>
                <option value="false">Inactive</option>
            </select>
        </div>
    </div>
    <div class="form-group row col-sm-4">
        <label for="date" class="col-sm-5 col-form-label">Date :</label>
        <div class="col-sm-7">
            <input type="date" value="" class="form-control" id="date" />
        </div>
    </div>

    <div class="form-group row col-sm-2 btn-text-right">
        <button type="button" class="btn btn-primary float-lg-end ">Search</button>
    </div>
</div>




<div class="col-md-11">
    <button class="btn btn-sm btn-primary pull-right m-2">Export</button>
    <button class="btn btn-sm btn-primary pull-right m-2">Upload</button>
    <a href="#" class="pull-right btn btn-sm btn-link m-2">Download Sample Template</a>
    <a asp-action="AddPrincipal" asp-controller="Principal" class="btn btn-primary btn-sm pull-right m-2"><span>Add New</span>   </a>

</div>

<div id="wrap" class="mt-3">
    <div class="container">
        <table cellpadding="0" cellspacing="0" border="0" class="datatable table table-striped table-bordered table-hover table-responsive ">
            <thead>
                <tr>
                    <th>#</th>
                    <th>School Name</th>
                    <th>Principal Name</th>
                    <th>Created Date</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @{int i = 0;}
                @foreach (var principal in Model.data)
                {
                    <tr>
                        <td>@(i = i + 1)</td>
                        <td>@principal.School.SchoolName</td>
                        <td>@principal.Name</td>
                        <td>@principal.CreatedDate.ToShortDateString() </td>

                        <td>@(principal.IsActive == true ? "Active" : "Inactive")</td>

                       <td>

                           <a href="" class="btn btn-link btn-sm">Edit</a>
                            <a href="" class="btn btn-link btn-sm">View</a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>
<script type="text/javascript" src="https://code.jquery.com/jquery-1.11.3.min.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $('.datatable').DataTable({
            searching: false,
            "oLanguage": {
                "sLengthMenu": "Rows_Per_Page _MENU_",
            },
            "dom": '<"top"i>rt<"bottom"flp><"clear">'
        });
        $('.datatable').each(function () {
            var datatable = $(this);
            var length_sel = datatable.closest('.dataTables_wrapper').find('div[id$=_length] select');
            length_sel.addClass('form-control input-lg');
        });
    });
</script>
