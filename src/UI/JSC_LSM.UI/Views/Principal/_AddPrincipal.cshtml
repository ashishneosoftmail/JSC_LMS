@model PrincipalModel
<style>
    .ButtonDesign {
        width: 10%;
        margin-left: 1%;
    }

    form {
        padding: inherit;
        margin: 5px 5px 5px 5px;
        border: 2px solid gray;
        height: 100%;
        /*  width : 100%;*/
    }

    input {
        width: 90%;
    }

    div {
        font-size: 16px;
    }

    .spacing {
        margin-left: 30px;
    }
</style>

<div class="container p-3 my-3 border fixed" id="div1">
    <p style="font-weight: bold; margin-left: 0.5em;">All <span style="color:red;">*</span> fields are mandatory</p>

    <form method="post" novalidate>

        <div class="row">
            <div class="col">
                <div class="form-group row">
                    <label for="inputSchool" class="col-sm-2 col-form-label">School<span class="text-danger">*</span></label>
                    <div class="col-sm-7">
                        <select class="form-control" asp-for="SchoolId" id="school" asp-items="Model.Schools">
                            <option disabled selected hidden>Select School</option>
                        </select>
                        <span asp-validation-for="SchoolId" class="text-danger"></span>
                    </div>
                </div>
                <br />
                <div class="form-group row">
                    <label for="inputEmail" class="col-sm-2 col-form-label">Email<span class="text-danger">*</span></label>
                    <div class="col-sm-7">
                        <input type="email" class="form-control" id="inputEmail" asp-for="Email" placeholder="abc@xyz.com">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <br />

                <div class="form-group row">
                    <label for="inputAddress1" class="col-sm-2 col-form-label">Address1<span class="text-danger">*</span></label>
                    <div class="col-sm-7">
                        <input type="text" class="form-control" id="inputAddress1" asp-for="AddressLine1" placeholder="Address 1">
                        <span asp-validation-for="AddressLine1" class="text-danger"></span>

                    </div>
                </div>
                <br />

                <div class="form-group row">
                    <label for="inputState" class="col-sm-2 col-form-label">State<span class="text-danger">*</span></label>
                    <div class="col-sm-7">
                        <select class="form-select" aria-label="Default select example" onchange="GetCityById()" id="principalState" asp-for="StateId" asp-items="Model.States">
                            <option value="" disabled selected>Select State</option>
                        </select>
                        <span asp-validation-for="StateId" class="text-danger"></span>

                    </div>
                </div>
                <br />

                <div class="form-group row">
                    <label for="inputZip" class="col-sm-2 col-form-label">Zip<span class="text-danger">*</span></label>
                    <div class="col-sm-7">
                        <select class="form-control" id="zip" asp-for="ZipId">
                            <option disabled selected hidden>Select Zip</option>
                        </select>
                        <span asp-validation-for="ZipId" class="text-danger"></span>
                    </div>
                </div>
                <br />


                <div class="form-group row">
                    <label for="inputPassword" class="col-sm-2 col-form-label">Password<span class="text-danger">*</span></label>
                    <div class="col-sm-7">
                        <input class="form-control" type="password" id="inputPassword" asp-for="Password" placeholder="Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <br />

                <label>Status</label>

                <div class="form-check form-check-inline">
                    @Html.RadioButtonFor(m => m.IsActive, true, new { @class = "form-check-input" })<label class="form-check-label" for="inlineRadio2">Active</label>

                </div>
                <div class="form-check form-check-inline">
                    @Html.RadioButtonFor(m => m.IsActive, false, new { @class = "form-check-input", @checked = "checked" }) <label class="form-check-label" for="inlineRadio1">InActive</label>

                </div>
                <span asp-validation-for="IsActive" class="text-danger"></span>

            </div>
            <div class="col">
                <div class="form-group row">
                    <label for="inputPrincipalName" class="col-sm-2 col-form-label">Name<span class="text-danger">*</span></label><br />
                    <div class="col-sm-7">
                        <input type="text" class="form-control" id="inputPrincipalName" asp-for="Name" placeholder="Ex: Abc Xyz">
                        <span asp-validation-for="Name" class="text-danger"></span>

                    </div>
                </div>
                <br />

                <div class="form-group row">
                    <label for="mobile" class="col-sm-2 col-form-label">Mobile<span class="text-danger">*</span></label><br />
                    <div class="col-sm-7">
                        <input type="text" asp-for="Mobile" class="form-control" id="mobile" placeholder="Contact Number">
                        <span asp-validation-for="Mobile" class="text-danger"></span>

                    </div>
                </div>
                <br />

                <div class="form-group row">
                    <label for="inputAddress2" class="col-sm-2 col-form-label">Address2<span class="text-danger">*</span></label>
                    <div class="col-sm-7">
                        <input type="text" class="form-control" id="inputAddress2" placeholder="Address 2" asp-for="AddressLine2">
                        <span asp-validation-for="AddressLine2" class="text-danger"></span>

                    </div>
                </div>
                <br />

                <div class="form-group row">
                    <label for="inputState" class="col-sm-2 col-form-label">City<span class="text-danger">*</span></label>
                    <div class="col-sm-7">
                        <select class="form-control" id="city" asp-for="CityId" onchange="GetZipByCityId()">
                            <option disabled selected hidden>Select City</option>
                        </select>
                        <span asp-validation-for="CityId" class="text-danger"></span>

                    </div>
                </div>
                <br />


                <div class="form-group row">
                    <label for="inputUserName" class="col-sm-2 col-form-label">UserName<span class="text-danger">*</span>:</label>
                    <div class="col-sm-7">
                        <input type="text" class="form-control" id="inputUserName" asp-for="Username" placeholder="Ex : Username123">
                        <span asp-validation-for="Username" class="text-danger"></span>

                    </div>
                </div>
                <br />
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Confirm Password<span class="text-danger">*</span></label>
                    <div class="col-sm-7">
                        <input type="password" asp-for="ConfirmPassword" class="form-control" id="password" placeholder="Password">
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
             

                <br />
                <br />

            </div>

        </div>


        <a asp-controller="Principal" asp-action="PrincipalDetails" class="btn btn-danger float-lg-end ButtonDesign">Cancel</a>
        <button type="submit" class="btn btn-primary float-lg-end ButtonDesign">Save</button>




    </form>
</div>
<div id="wrapper">
    @if (ViewBag.AddPrincipalSuccess != null)
    {
        <script>alert("@ViewBag.AddPrincipalSuccess")</script>
    }
    @if (ViewBag.AddPrincipalError != null)
    {
        <script>alert("@ViewBag.AddPrincipalError")</script>
    }
</div>
<script type="text/javascript">
    function GetCityById() {
        var stateValue = $("#principalState :selected").val();
        //You can check selected value using alert

        if (stateValue != null) {
            $.get("/Principal/GetCityByStateId", { id: stateValue }, function (data) {
                console.log(data);
                $("#city").empty();
                $("#zip").empty();
                $("#zip").append("<option disabled selected hidden>Select Zip</option>");
                $("#city").append("<option disabled selected hidden>Select City</option>");
                data.forEach(function (city) {
                    $('#city').append('<option value="' + city.value + '">' + city.text + '</option>');
                });
            });
        }
    }
    function GetZipByCityId() {
        var cityValue = $("#city :selected").val();
        //You can check selected value using alert

        if (cityValue != null) {
            $.get("/Principal/GetZipByCityId", { cityId: cityValue }, function (data) {
                console.log(data);
                $("#zip").empty();
                $("#zip").append("<option disabled selected hidden>Select Zip</option>");
                data.forEach(function (zip) {
                    $('#zip').append('<option value="' + zip.value + '">' + zip.text + '</option>');
                });
            });
        }
    }
</script>

<script type="text/javascript" src="http://code.jquery.com/jquery-1.8.2.js"></script>
<script type="text/javascript">
    $(function () {
        $('#mobile').keydown(function (e) {
            if (e.shiftKey || e.ctrlKey || e.altKey) {
                e.preventDefault();
            } else {
                var key = e.keyCode;
                if (!((key == 8) || (key == 46) || (key >= 35 && key <= 40) || (key >= 48 && key <= 57) || (key >= 96 && key <= 105))) {
                    e.preventDefault();
                }
            }
        });
    });
</script>
