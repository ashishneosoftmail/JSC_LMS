<div id="chart_div" style="margin-bottom:3em;"></div>

<script type="text/javascript">


    google.charts.load('current', {
        packages: ['corechart', 'bar']
    });
    google.charts.setOnLoadCallback(LoadData);

    function LoadData() {
        $.ajax({

            url: 'EventsDataPrincipalBarChart',
            dataType: "json",
            type: "GET",
            error: function (xhr, status, error) {
                var err = eval("(" + xhr.responseText + ")");
                toastr.error(err.message);
            },
            success: function (data) {
                EventsDataPrincipalBarChart(data);
                return false;
            }
        });
        return false;
    }

    function EventsDataPrincipalBarChart(data) {
        var dataArray = [
            ['Month', 'Events']
        ];
        $.each(data, function (i, item) {
            dataArray.push([item.month, item.eventsChartCount]);
        });
        var data = google.visualization.arrayToDataTable(dataArray);
        var options = {
            title: 'Number of events held',
            width: 970,
            height: 400,
            chartArea: {
                width: '75%'
            },
            colors: ['#4876FF'],
            hAxis: {
                title: 'Month',
                minValue: 0
            },
            vAxis: {
                title: 'Total Events',
                ticks: [0, 2, 4, 6],

            }
        };
        var chart = new google.visualization.ColumnChart(document.getElementById('chart_div'));

        chart.draw(data, options);
        return false;
    }
</script>

