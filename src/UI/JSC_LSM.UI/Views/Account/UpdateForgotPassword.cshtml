<body class="hold-transition login-page">
    <div class="login-box">
        <div class="card card-outline card-primary">
            <div class="card-header text-center">
                <a class="h1 noUnderline"><b>JCS </b>LMS</a>
            </div>
            <div class="card-body">
                <p class="login-box-msg">Password Recovery</p>
                <form asp-action="UpdateForgotPassword" asp-controller="Account" method="post" novalidate>
                    <div class="input-group mb-3">
                        <br />
                        <input type="password" asp-for="NewPassword" class="form-control" placeholder="Enter Password">
                        @* <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-envelope fa-2x envelopStyle"></span>
                                </div>
                            </div>*@
                    </div>
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                    <div class="input-group mb-3">
                        <br />
                        <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="Enter Confirm Password">
                        @* <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-envelope fa-2x envelopStyle"></span>
                                </div>
                            </div>*@
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    <div class="row mt-1">
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary btn-block submitButtonStyle">Verify Password</button>
                        </div>
                    </div>
                    <div class="row mt-2">

                        <span class="text-danger"></span>
                    </div>
                </form>
            </div>

        </div>
    </div>
</body>
