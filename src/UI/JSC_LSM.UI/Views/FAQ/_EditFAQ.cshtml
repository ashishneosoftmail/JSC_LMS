

@model FAQViewModel

<style>

    form {
        padding: inherit;
        margin: 5px 5px 5px 5px;
        border: 2px solid black;
    }

   

    button {
        margin: 40px;
        padding: 70px;
    }


    #requestacallform {
        width: 250px;
    }

    #editor {
        width: 100%;
        height: 200px;
    }

    #snackbar {
        background-color: green;
        visibility: hidden;
        min-width: 250px;
        margin-left: -113px;
        color: #fff;
        text-align: center;
        border-radius: 2px;
        padding: 21px;
        position: fixed;
        z-index: 1;
        left: 90%;
        top: 82px;
        font-size: 17px;
    }

        #snackbar.show {
            visibility: visible;
            -webkit-animation: fadein 0.5s, fadeout 0.5s 2.5s;
            animation: fadein 0.5s, fadeout 0.5s 2.5s;
        }


        #snackbar.show {
            visibility: visible;
            -webkit-animation: fadein 0.5s, fadeout 0.5s 2.5s;
            animation: fadein 0.5s, fadeout 0.5s 2.5s;
        }

    #snackbardanger {
        background-color: red;
        visibility: hidden;
        min-width: 250px;
        margin-left: -113px;
        color: #fff;
        text-align: center;
        border-radius: 2px;
        padding: 21px;
        position: fixed;
        z-index: 1;
        left: 90%;
        top: 82px;
        font-size: 17px;
    }

        #snackbardanger.show {
            visibility: visible;
            -webkit-animation: fadein 0.5s, fadeout 0.5s 2.5s;
            animation: fadein 0.5s, fadeout 0.5s 2.5s;
        }

    @@-webkit-keyframes fadein {
        from {
            top: 0;
            opacity: 0;
        }

        to {
            top: 30px;
            opacity: 1;
        }
    }

    @@keyframes fadein {
        from {
            top: 0;
            opacity: 0;
        }

        to {
            top: 30px;
            opacity: 1;
        }
    }

    @@-webkit-keyframes fadeout {
        from {
            top: 30px;
            opacity: 1;
        }

        to {
            top: 0;
            opacity: 0;
        }
    }

    @@keyframes fadeout {
        from {
            top: 30px;
            opacity: 1;
        }

        to {
            top: 0;
            opacity: 0;
        }
    }

    .spacing {
        margin-left: 30px;
    }
</style>


<div class="container p-3 my-3 border fixed" id="div1">
    <p style="font-weight: bold; margin-left: 0.5em;">All <span style="color:red;">*</span> fields are mandatory</p>

    <form asp-action="EditFAQ" asp-controller="FAQ">

        <div class="row">
            <div class="col">

                <div class="form-group row">
                    <label for="inputKnow" class="col-sm-2 col-form-label">Category<span class="text-danger">*</span></label>
                    <div class="col-sm-4" style="margin-left:-5em;">
                        <select class="form-control" asp-for="UpdateFAQ.CategoryId" id="school" asp-items="Model.Categories">
                            <option disabled selected hidden>Select Category</option>
                        </select>
                        <span asp-validation-for="UpdateFAQ.CategoryId" class="text-danger"></span>

                    </div>
                    <div class="col-sm-4 mt-2" style="margin-left:2em;">
                        <a href="" data-toggle="modal" data-target=".bannerformmodal">+Add Category</a>
                    </div>
                </div>
               

                <div class="form-group row">
                    <label for="inputKnow" class="col-sm-2 col-form-label">FAQTitle<span class="text-danger">*</span> </label>
                    <div class="col-sm-6" style="margin-left:-5em;">
                        <input type="text" class="form-control" id="inputDoc" placeholder="Doc Title" asp-for="UpdateFAQ.FAQTitle">
                        <span asp-validation-for="UpdateFAQ.FAQTitle" class="text-danger"></span>
                    </div>
                </div>
              

                <div class="form-group row">
                    <label for="inputKnow" class="col-sm-2 col-form-label">Question<span class="text-danger">*</span></label><br />
                    <div class="col-sm-6" style="margin-left:-5em;">
                        <input type="text" class="form-control" id="inputSubtitle" placeholder="Type Question" asp-for="UpdateFAQ.Question">
                        <span asp-validation-for="UpdateFAQ.Question" class="text-danger"></span>

                    </div>
                </div>

            </div>
          

            <div class="form-group row">
                <label for="status" class="col-sm-3 col-form-label" style="margin-right:-10em;">Status</label>

                <div class="col-sm-9">
                    <div class="form-check form-check-inline">
                        @Html.RadioButtonFor(m => m.UpdateFAQ.IsActive, true, new { @class = "form-check-input", Checked = "checked" }) <label class="form-check-label" for="inlineRadio1">Active</label>

                    </div>
                    <div class="form-check form-check-inline">
                        @Html.RadioButtonFor(m => m.UpdateFAQ.IsActive, false, new { @class = "form-check-input" })<label class="form-check-label" for="inlineRadio2">Inactive</label>

                    </div>
                    <span asp-validation-for="UpdateFAQ.IsActive" class="text-danger"></span>
                </div>
            </div>

          

            <div class="form-group row">

                <label for="inputKnow" class="col-sm-2 col-form-label">Add Content<span class="text-danger">*</span></label>
                <div class="col-sm-10" style="margin-left:-5em;">

                    <textarea id="editor" placeholder="Add Content" asp-for="UpdateFAQ.Content"></textarea>
                    <span asp-validation-for="UpdateFAQ.Content" class="text-danger"></span>

                </div>
            </div>
          


            <div class="container">
                <div class="row">
              
                    <div class="col-sm-9">

                    </div>

                    <div class="col" style="margin-left:1em;">
                        <button type="submit" class="btn btn-primary">Save</button>
                        @* <button type="button" class="btn btn-danger">Cancel</button>*@
                        <a asp-controller="FAQ" asp-action="FAQList" class="btn btn-danger">Cancel</a>
                    </div>
                </div>


    </form>
</div>
<div class="modal fade bannerformmodal" tabindex="-1" role="dialog" aria-labelledby="bannerformmodal" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-content">
                <div class="modal-header">

                    <h4 class="modal-title" id="myModalLabel">Category Name</h4>
                </div>
                <div class="modal-body">
                    <form id="requestacallform" method="post" asp-controller="FAQ" asp-action="AddCategory">

                        <div class="spacing">
                            <span class="row text-danger">* marked are mandatory</span>
                        </div>
                        <div class="form-group">
                            <label>Add Category  <span class="text-danger">*</span></label>
                            <div class="input-group">

                                <input id="first_name" asp-for="AddCategory.CategoryName" type="text" class="form-control" placeholder="Category Name" />
                                <span asp-validation-for="AddCategory.CategoryName" class="text-danger"></span>

                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>

                        <button type="button" class="btn btn-danger" data-dismiss="modal" aria-hidden="true">Cancel</button>
                    </form>
                </div>
                <div class="modal-footer">


                </div>
            </div>
        </div>
    </div>
</div>

<div id="wrapper">
    @if (ViewBag.AddCategorySuccess != null)
    {

        @* <script>alert("@ViewBag.AddCircularSuccess")</script>*@
        <div id="snackbar" class="snackbar-success "><i class="fa fa-check" aria-hidden="true"></i> @ViewBag.AddCategorySuccess</div>
        <script>
            var x = document.getElementById("snackbar");
            x.className = "show";
            setTimeout(function () { x.className = x.className.replace("show", ""); }, 5000);
        </script>
    }
    @if (ViewBag.AddCategoryError != null)
    {
        @* <script>alert("@ViewBag.AddCircularError")</script>*@
        <div id="snackbardanger"><i class="fa fa-times" aria-hidden="true"></i> @ViewBag.AddCategoryError</div>
        <script>
            var x = document.getElementById("snackbardanger");
            x.className = "show";
            setTimeout(function () { x.className = x.className.replace("show", ""); }, 5000);
        </script>
    }
    @if (ViewBag.UpdateFAQSuccess != null)
    {
        @* <script>alert("@ViewBag.UpdateCircularSuccess")</script>*@
        <div id="snackbar" class="snackbar-success"><i class="fa fa-check" aria-hidden="true"></i> @ViewBag.UpdateFAQSuccess</div>
        <script>
            var x = document.getElementById("snackbar");
            x.className = "show";
            setTimeout(function () { x.className = x.className.replace("show", ""); }, 5000);
        </script>
    }
    @if (ViewBag.UpdateFAQError != null)
    {
        @*<script>alert("@ViewBag.UpdateCircularError")</script>*@
        <div id="snackbardanger"><i class="fa fa-times" aria-hidden="true"></i> @ViewBag.UpdateFAQError</div>
        <script>
            var x = document.getElementById("snackbardanger");
            x.className = "show";
            setTimeout(function () { x.className = x.className.replace("show", ""); }, 5000);
        </script>
    }

</div>

