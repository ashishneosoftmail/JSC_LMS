<style>
    ::-webkit-scrollbar {
        display: block;
        overflow-y: hidden;
        overflow-x: hidden;
    }
    .login-page {
        background-color: #EBF1F5;
    }
    .login-box {
        padding-top: 100px;
    }
    .login-box .noUnderline{
        text-decoration: none;
        color : black;
        font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
    }
        .login-box .noUnderline:hover {
            text-decoration: none;
            color: #0056b3;
            font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        }
    .submitButtonStyle {
        width: 100%;
        background-color: #3378a0;
    }

    .submitButtonStyle:hover {
        width: 100%;
        background-color: #0056b3;
    }
   
